@*{My file}*@
@model IEnumerable<AuthorViewModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery
@{
    ViewData["Title"] = "Authors";
}
@section Styles
{
    <link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" />
   
}
<div class="alert alert-primary d-flex justify-content-between" role="alert">
    <div class="symbol symbol-40px me-4 d-flex align-items-center">
        <div class="symbol-label fs-2 me-4 fw-semibold text-success">
            <!--begin::Svg Icon | path: icons/duotune/general/gen002.svg-->
            <span class="svg-icon svg-icon-2 svg-icon-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"></path>
                </svg>
            </span>
            <!--end::Svg Icon-->
        </div>
        <div class="d-flex pe-0 pe-sm-9 align-content-center ">
            <h5>Authors</h5>
        </div>
    </div>
    
    <div>
        <a href="javascript:;" class="btn btn-sm btn-primary js-render-modal " data-title="Add Author" data-url="/Authors/Create">
            <i class="bi bi-plus-square-dotted"></i>
            Add
        </a>
    </div>
    
</div>
<div class="card shadow-sm">
        <partial name="_DataTableCardHeader"/>
    <div class="card-body pt-0">
        <div class="table-responsive">
            <table class="table table-row-dashed table-row-gray-300 gy-2 align-middle js-datatables" data-export-title="Authors">
                <thead>
                    <tr class="fw-bold fs-6 text-gray-800">
                        <th>Name</th>
                        <th>Status</th>
                        <th>Created On</th>
                        <th>Last Updated On</th>
                        <th class="text-end js-export-execlude">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Author in Model)
                    {
                        <partial name="_AuthorRow" model="@Author" />

                    }

                </tbody>
            </table>
        </div>
       
    </div>
</div>

@* @Html.AntiForgeryToken(); *@
<input type="hidden" name="__RequestVerificationToken" value="@antiforgery.GetAndStoreTokens(Context).RequestToken" />
@section Plugings
{
     <script src="~/assets/plugins/datatables/datatables.bundle.js"></script> 
    
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}

